function sign(str) {
    if (str === 'like' || str === 'likea' || str === 'likee') {
        echo('like');
    } else if (str === 'le') { 
        echo('<=');
    } else if (str === 'lt') {
        echo('<');
    } else if (str === 'ge') {
        echo('>=');
    } else if (str === 'gt') { 
        echo('>');
    } else if (str === 'ne') {
        echo('!=');
    }
}
function prefix(str) {
    if (str === 'like' || str === 'likee') {
        echo("'%'.");
    }
}
function postfix(str) {
    if (str === 'like' || str === 'likea') { 
        echo(".'%'");
    }
}
